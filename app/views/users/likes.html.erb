<div class="page-header">
  <h3><%= @user.username %> Likes</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td><%= like.caption %></td>
        <td><%= like.image %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
